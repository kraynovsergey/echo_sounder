extends base

block seo
    - var seo = {title: 'Восстановление пароля', description: '', keywords: ''}

block main
    main.main(role="main")
        //Восстановление пароля
        section.section.auth._blue
            .container.auth__container
                .auth__block
                    h1.h1.auth__title.heading-font(role="heading") Восстановить пароль
                    form.form.auth__form(action="#" method="post" role="form")
                        fieldset.form__fieldset
                            label.form__label(for="forget-phone") Номер телефона*
                            input.form__input(type="tel" name="phone" id="forget-phone" data-tel)
                        button.form__btn.btn._middle(type="submit" role="button") Далее

            img.auth__bg(src="img/auth-bg.svg" alt="" width="1920" height="832")

        //Карты
        - var footer_maps_classnames = '_pb0'
        include includes/_footer-maps