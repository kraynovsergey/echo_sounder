extends base

block seo
    - var seo = {title: 'Редактирование личных данных', description: '', keywords: ''}

block main
    main.main(role="main")
        //Редактирование личных данных
        section.section._ultra-small._blue
            .container
                h1.h1.heading-font(role="heading") Личный кабинет
                .cabinet__grid
                    include includes/_cabinet-aside

                    .cabinet__content
                        h2.cabinet__content-title.heading-font(role="heading") Личные данные

                        form.form.profile__form(action="#" method="post" role="form")
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-fullname") Имя
                                input.form__input(type="text" name="fullname" id="profile-fullname" value="Иван Иванов")
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-city") Город
                                input.form__input(type="text" name="city" id="profile-city" value="Москва")
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-phone") Номер телефона
                                input.form__input(type="tel" name="phone" id="profile-phone" value="+7 (999) 123-22-23" data-tel)
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-street") Улица
                                input.form__input(type="text" name="street" id="profile-street" value="Московская")
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-password") Пароль
                                .form__password
                                    input.form__input(type="password" name="password" id="profile-password" value="123123" autocomplete="off")
                                    svg.form__eye(width="18" height="17" data-password)
                                        use(xlink:href="img/sprite.svg#password")
                                .form__note-left
                                    a.form__note-link(href="#" role="link") Сменить пароль
                            fieldset.form__fieldset.profile__fieldset
                                label.form__label(for="profile-building") Дом
                                input.form__input(type="text" name="building" id="profile-building" value="1")
                            .profile__form-controls
                                button.btn._middle(type="submit" role="button") Сохранить
                                .form__checkbox.profile__form-checkbox
                                    input(type="checkbox" name="subscribe" id="profile-subscribe" checked)
                                    label(for="profile-subscribe")
                                        span
                                        | Получать информацию о спец предложениях и обновлении ПО

        //Электронный гарантийный талон
        include includes/_get-guarantee

        //Вам может понравится
        - var like_title = 'Вам может понравиться';
        include includes/_like

        //Карты
        - var footer_maps_classnames = '_pt0 _pb0'
        include includes/_footer-maps