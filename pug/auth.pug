extends base

block seo
    - var seo = {title: 'Вход в личный кабинет', description: '', keywords: ''}

block main
    main.main(role="main")
        //Авторизация
        section.section.auth._blue
            .container.auth__container
                .auth__block
                    h1.h1.auth__title.heading-font(role="heading") Личный кабинет
                    form.form.auth__form(action="#" method="post" role="form")
                        fieldset.form__fieldset
                            label.form__label(for="auth-phone") Номер телефона*
                            input.form__input(type="tel" name="phone" id="auth-phone" data-tel)
                        fieldset.form__fieldset
                            label.form__label(for="auth-password") Пароль*
                            input.form__input(type="password" name="password" id="auth-password")
                            .form__note-right
                                a.form__note-link(href="#" role="link") Забыли пароль?
                        button.form__btn.btn._middle(type="submit" role="button") Войти
                        a.form__btn.auth__divider.btn._middle._border(href="#" role="link") Зарегистрироваться

            img.auth__bg(src="img/auth-bg.svg" alt="" width="1920" height="832")

        //Карты
        - var footer_maps_classnames = '_pb0'
        include includes/_footer-maps